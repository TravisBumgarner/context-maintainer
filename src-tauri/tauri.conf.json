{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Context Switching",
  "version": "0.1.0",
  "identifier": "com.travisbumgarner.context-switching",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Context Switching",
        "width": 240,
        "height": 320,
        "minWidth": 180,
        "minHeight": 30,
        "alwaysOnTop": true,
        "resizable": true,
        "maximizable": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
