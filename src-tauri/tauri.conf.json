{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Context Maintainer",
  "version": "0.4.0",
  "identifier": "com.travisbumgarner.context-switching",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Context Maintainer",
        "width": 290,
        "height": 370,
        "minWidth": 180,
        "minHeight": 30,
        "alwaysOnTop": true,
        "resizable": true,
        "maximizable": false,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns"
    ],
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDc5QzZDODRENEY4OTIyRUQKUldUdElvbFBUY2pHZWVXcnRwdFBqeFRQUzhydTU4bnZDK1J5ZG4zdWtScXIrMzR4RWlUSXZsOG8K",
      "endpoints": [
        "https://github.com/TravisBumgarner/context-switching/releases/latest/download/latest.json"
      ]
    }
  }
}